#!/bin/bash

update() {
    local name="$1"
    local url="$2"
    echo -n "Updating ${name}..."
    curl "$url" --silent --location -o ~/.bin/$name && chmod 0755 ~/.bin/$name
    echo " done."
}

update ack http://betterthangrep.com/ack-standalone
update terminal-colors http://zhar.net/projects/shell/terminal-colors
update sshrc https://raw.githubusercontent.com/Russell91/sshrc/master/sshrc
update ghi https://raw.githubusercontent.com/stephencelis/ghi/master/ghi
update icdiff https://raw.githubusercontent.com/jeffkaufman/icdiff/master/icdiff
update ts 'http://git.kitenet.net/?p=moreutils.git;a=blob_plain;f=ts;hb=HEAD'
update diff-so-fancy https://raw.githubusercontent.com/so-fancy/diff-so-fancy/master/diff-so-fancy

