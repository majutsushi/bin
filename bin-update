#!/bin/bash

echo -n "Updating ack..."
curl http://betterthangrep.com/ack-standalone --silent --location -o ~/.bin/ack && chmod 0755 ~/.bin/ack
echo " done."

echo -n "Updating hub..."
curl http://defunkt.io/hub/standalone --silent --location -o ~/.bin/hub && chmod 0755 ~/.bin/hub
echo " done."

